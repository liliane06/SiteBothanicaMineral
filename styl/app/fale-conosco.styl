.input-fale-conosco-full
    width 100%
    height 40px
    margin-bottom: 20px
    border 2px solid #005620
    &:focus
        border: 2px solid lighten($colors['main'], 20%)	
    
.input-fale-conosco
    width: 49%
    height 40px
    margin-bottom: 20px
    border 2px solid #005620
    float: left 
    &:focus
        border: 2px solid lighten($colors['main'], 20%)	

.input-fale-conosco-direita
    margin-left: 10px

.mensagem-fale-conosco
    width: 100%
    border 2px solid #005620
    text-align: center
    padding-top: 20px
    &:focus
        border: 2px solid lighten($colors['main'], 20%)	

.botao-fale-conosco 
    margin: auto
    background-color: $colors['main']
    color: #ffffff
    width: 25%
    height 40px
    font-size: 16px
    &:hover
        background-color: lighten($colors['main'], 20%)
        transition: 1s

input:focus, select:focus, textarea:focus, input.form-control:focus, select.form-control:focus, textarea.form-control:focus {
    border: 2px solid #84c140;
}

@media screen and (max-width: 1197px)
    .input-fale-conosco
        width: 48%
    .input-fale-conosco-direita
        margin-left: 16px

@media screen and (max-width: 1000px)
    .input-fale-conosco-direita
        margin-left: 28px

@media screen and (max-width: 900px)
    .texto-fale-conosco
        text-align: center

@media screen and (max-width: 500px)
    .input-fale-conosco
        width: 100%
    
    .input-fale-conosco-direita
        margin-left: 0