.rede-sociais-blog
    text-align: center
    & > a
        padding-left:5px
.banneCover
    background-size: cover
    background-repeat: no-repeat
    width: 100%

.banner-blog1
    @extends .banneCover
    background-image: url(../img/blog/background-parte1.jpg)
    height 605px
    position: relative

.banner-blog2
    @extends .banneCover
    background-image: url(../img/blog/background-parte2.jpg)
    height 300px

.banner-blog3
    @extends .banneCover
    background-image: url(../img/blog/background-parte3.jpg)
    height 300px

.section-blog
    padding: 5px

.possition-texto-banner
    text-align: center
    color: #fff

.possition-flor-banner
    margin:auto
    width: 40px

.gradiente-texto-banner
    background: -moz-linear-gradient(to bottom, rgba(2,0,0,0.01) 0%, #929292 100%);
    background: -webkit-linear-gradient(to bottom, rgba(2,0,0,0.01) 0%, #929292 100%);
    background: linear-gradient(to bottom, rgba(2,0,0,0.01) 0%, #929292 100%);
    position: absolute;
    bottom: 0;
    width: 100%;


.color
    color: #741815

.link-do-blog
    color: $colors['verde-bm']
    &:hover
        font-weight: bold
        text-decoration: none 
        color: $colors['verde-bm']

.link-barra-lateral 
    li
        list-style: none
        text-transform: uppercase
        padding-top: 8px;
        a
            color: #737373
            text-decoration: none
        a:hover
            color: $colors['verde-bm']
            font-weight: bold

.titulo-barra-lateral
    text-align: left 


label[for="email"]
    position: relative

label[for="email"]:before
    content: "Ok"
    background-color:#355731
    background-size: 50% 50%;
    width: 2em
    height: 2em
    background-position: center
    position: absolute
    top: 0
    right 0
    color: white
    text-align: center
    padding-top: 5px


.input-email
    background-color: #e2e7e2
    height: 28px
    width: 90%

.campo-de-busca
    box-shadow: 0 0 0 9999999px rgba(0,0,0,.7);
    z-index: 999999999999


@media screen and (max-width:900px)
    .banner-blog1
        background-position: top, left

@media screen and (max-width:700px)
    .banner-small
        padding-top: 5px