.rede-sociais-blog
    text-align: center
    & > a
        padding-left:5px
.banneCover
    background-size: cover
    background-repeat: no-repeat
    width: 100%

.banner-blog1
    @extends .banneCover
    background-image: url(../img/blog/background-parte1.jpg)
    height 605px
    position: relative

.banner-blog2
    @extends .banneCover
    background-image: url(../img/blog/background-parte2.jpg)
    height 300px

.banner-blog3
    @extends .banneCover
    background-image: url(../img/blog/background-parte3.jpg)
    height 300px

.section-blog
    padding: 5px

.possition-texto-banner
    text-align: center
    color: #fff

.possition-flor-banner
    margin:auto
    width: 40px

.gradiente-texto-banner
    background: -moz-linear-gradient(to bottom, rgba(2,0,0,0.01) 0%, #929292 100%);
    background: -webkit-linear-gradient(to bottom, rgba(2,0,0,0.01) 0%, #929292 100%);
    background: linear-gradient(to bottom, rgba(2,0,0,0.01) 0%, #929292 100%);
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 80px;

@media screen and (max-width:900px)
    .banner-blog1
        background-position: top, left

@media screen and (max-width:700px)
    .banner-small
        padding-top: 5px