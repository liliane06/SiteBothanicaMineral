extends ./_layouts/bm.pug

block append CSS
    link(rel="stylesheet", href="css/style.css")
    

block content

    section.section.background-produtos-tec
        .container
            .row
                .col-sm-10.col-sm-offset-1
                    h2.text-center.text-main CONHEÇA NOSSA LINHA DE PRODUTOS
                    .line-verde.line-small
                    .row
                        .flex.pd-40-top
                            .cat
                                a(href="/produtos/celulite")
                                    img.img-responsive.center-block(src="img/celulite.png"  + version, alt="Celulite")
                                    p.uppercase.text-center CELULITE
                            .cat
                                a(href="/produtos/destoxicacao")
                                    img.img-responsive.center-block(src="img/destox.png"  + version, alt="Celulite")
                                    p.uppercase.text-center Destoxicação
                            .cat
                                a(href="/produtos/estrias")
                                    img.img-responsive.center-block(src="img/estrias.png"  + version, alt="Celulite")
                                    p.uppercase.text-center estrias
                            .cat
                                a(href="/produtos/flacidez")
                                    img.img-responsive.center-block(src="img/flacidez.png"  + version, alt="Celulite")
                                    p.uppercase.text-center flacidez
                            .cat
                                a(href="/produtos/gordura-localizada")
                                    img.img-responsive.center-block(src="img/celulite.png"  + version, alt="Celulite")
                                    p.uppercase.text-center gordura localizada
                        .col-sm-12
                            p.pd-40-top Com uma exclusiva linha de produtos da mais alta qualidade, desenvolvidos sob rigorosos processos, a Bothanica Mineral garante 
                                |resultados fantásticos e sucesso irrevogável ao profissional da área da beleza, 
                                | que contará com ampla eficácia nos tratamentos e total satisfação de suas cliente


    // objetos não visiveis na tela
    img(src="img/linha-dourada.png"  + version, alt="linha dourada", class="hidden", id="dourado")
    img(src="img/brilho.png"  + version, alt="linha dourada", class="hidden", id="shiny")







block append scriptsJS
    script(src="js/app.js")


